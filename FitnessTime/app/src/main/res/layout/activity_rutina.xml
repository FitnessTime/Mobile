<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fitnesstime.fitnesstime.activity.RutinaActivity">

    <TextView
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:numColumns="auto_fit"
        android:id="@+id/lblRutina"
        android:layout_weight="0.66"
        android:textSize="25dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="429dp"
        android:id="@+id/listEjercicios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicios:"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/lblFin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lblInicio"
        android:textSize="25dp"
        android:layout_below="@+id/lblRutina"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lblFin"
        android:textSize="25dp"
        android:layout_below="@+id/lblInicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
