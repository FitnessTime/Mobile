<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pauseButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:text="@string/timerVal" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="38dp"
        android:text="@string/startButtonLabel" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/startButton"
        android:layout_alignBottom="@+id/startButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:text="@string/pauseButtonLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minIntervaloUno"
        android:hint="min"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/startButton"
        android:layout_toEndOf="@+id/startButton"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intervalo 1: "
        android:id="@+id/lblIntervaloUno"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/minIntervaloUno"
        android:layout_alignLeft="@+id/startButton"
        android:layout_alignStart="@+id/startButton"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/segIntervaloUno"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="seg"
        android:layout_above="@+id/segIntervaloDos"
        android:layout_toRightOf="@+id/minIntervaloUno"
        android:layout_toEndOf="@+id/minIntervaloUno"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intervalo 2: "
        android:id="@+id/lblIntervaloDos"
        android:layout_below="@+id/minIntervaloUno"
        android:layout_alignLeft="@+id/lblIntervaloUno"
        android:layout_alignStart="@+id/lblIntervaloUno"
        android:layout_marginTop="23dp"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minIntervaloDos"
        android:layout_alignBottom="@+id/lblIntervaloDos"
        android:layout_alignLeft="@+id/minIntervaloUno"
        android:layout_alignStart="@+id/minIntervaloUno"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="min"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/segIntervaloDos"
        android:layout_alignBottom="@+id/minIntervaloDos"
        android:layout_alignLeft="@+id/segIntervaloUno"
        android:layout_alignStart="@+id/segIntervaloUno"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="seg"
        android:inputType="number" />

</RelativeLayout>
