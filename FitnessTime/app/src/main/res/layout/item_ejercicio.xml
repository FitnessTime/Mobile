<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:layout_margin="8dp"
    android:id="@+id/card"
    android:clickable="true"
    android:translationZ="5dp"
    cardview:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp">

        <TextView
            android:id="@+id/nombre_ejercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:padding="8dp"
            android:textColor="@color/texto_app"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:text="Nombre ejercicio"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dia de la semana"
            android:id="@+id/dia_de_la_semana"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/icono_agregar_marca"
            android:layout_alignStart="@+id/nombre_ejercicio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Series"
            android:id="@+id/series_ejercicio"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/dia_de_la_semana"
            android:layout_alignStart="@+id/nombre_ejercicio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Repeticiones"
            android:id="@+id/repeticiones_ejercicio"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/series_ejercicio"
            android:layout_alignStart="@+id/nombre_ejercicio" />

        <ImageView
            android:id="@+id/icono_agregar_marca"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_marca"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ãšltima marca registrada:"
            android:id="@+id/ultima_marca_registrada"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/repeticiones_ejercicio"
            android:layout_alignStart="@+id/nombre_ejercicio"
            android:textStyle="bold"
            android:textColor="#d2762a" />
    </RelativeLayout>
</android.support.v7.widget.CardView>