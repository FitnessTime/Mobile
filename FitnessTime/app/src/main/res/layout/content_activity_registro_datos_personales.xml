<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivityRegistroDatosPersonales"
    android:scrollIndicators="right">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ingrese su nombre y contraseña"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_marginTop="150dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registro_nombre"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="66dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Nombre"
                android:backgroundTint="@color/boton_loggin" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/registro_password"
                android:layout_below="@+id/editText"
                android:layout_marginTop="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/editText"
                android:hint="Contraseña"
                android:backgroundTint="@color/boton_loggin"
                android:backgroundTintMode="screen" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:id="@+id/botonSiguienteDatosPersonales"
                android:background="@color/boton_loggin"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
